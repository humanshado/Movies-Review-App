<%= form_for(@movie) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, autofocus: true %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, cols: 60, rows: 8 %>
  </p>
  <p>
    <%= f.label :released_on %><br>
    <%= f.date_select :released_on, starts_year: 1900 %>
  </p>
  <p>
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </p>
  <p>
    <%= f.label :duration %><br>
    <%= f.number_field :duration %>
  </p>
  <p>
    <%= f.label :rating %><br>
    <%= f.text_field :rating %>
  </p>
  <p>
    <%= f.label :total_gross %><br>
    <%= f.number_field :total_gross %>
  </p>
  <p>
    <%= f.submit %> |
    <%= link_to "Cancel", movies_path %>
  </p>
<% end %>
