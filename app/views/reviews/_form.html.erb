<%= form_for([@movie, @movie.reviews.build]) do |f| %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name, size: 25, autofocus: true %>
  </p>
  <p>
    <%= f.label :stars %><br/>
    <%= f.number_field :stars %>
  </p>
  <p>
    <%= f.label :comment %><br/>
    <%= f.text_area :comment, cols: 60, rows: 5 %>
  </p>
  <p>
    <%= f.submit 'Post Review', class: "btn btn-primary" %>
  </p>
<% end %>
