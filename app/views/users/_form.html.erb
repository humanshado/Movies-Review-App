<%= form_for(@user) do |f| %>
  <fieldset class="form-horizontal">
    <p class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>
    <p class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </p>
    <p class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </p>
    <p class="form-group">
      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>
    </p>
    <p class="form-group">
      <% if @user.new_record? %>
        <%= f.submit "Create Account" %>
      <% else %>
        <%= f.submit "Update Account" %>
      <% end %>
    </p>
  </fieldset>
<% end %>
