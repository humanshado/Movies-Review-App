<article class="user">
  <header>
    <h4><i class="fa fa-user-circle-o" aria-hidden="true"></i> | <%= link_to @user.name, user_path %></h4>
    <h6><%= @user.email %></h6>
  </header>
  <hr />
  <br /><br />
  <footer>
    <nav>
      <% if current_user?(@user) %>
          <%= link_to "Edit Account", edit_user_path(@user), class: "btn btn-outline-primary" %>
          <%= link_to "Delete Account", @user,
                      method: :delete,
                      data: { confirm: "Are you sure?"  },
                      class: "btn btn-outline-danger" %>
      <% end %>
    </nav>
  </footer>
</article>
